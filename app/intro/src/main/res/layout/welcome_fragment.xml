<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="welcomeModel"
            type="com.runle.intro.model.WelcomeModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@{welcomeModel.contentImage}"
            tools:src="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.runle.intro.viewholder.StoriesProgressView
            android:id="@+id/stories"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/_50dp"
            android:layout_marginHorizontal="@dimen/_32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/click_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/reverse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <View
                android:id="@+id/skip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/title_welcome"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/_32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="@{welcomeModel.title}"
            android:textColor="@color/orange"
            android:textSize="@dimen/_22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/stories"
            app:layout_constraintTop_toBottomOf="@+id/stories"
            tools:text="Welcome!" />

        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:layout_marginTop="@dimen/_16dp"
            android:text="@{welcomeModel.description}"
            android:textSize="@dimen/_26dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/stories"
            app:layout_constraintStart_toStartOf="@+id/title_welcome"
            app:layout_constraintTop_toBottomOf="@+id/title_welcome"
            tools:text="Fooddoor satisfies your food cravings with your favourite food delivered to you, wherever you areTypography" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:backgroundTint="@color/orange"
            android:paddingHorizontal="@dimen/_48dp"
            android:text="@{welcomeModel.getStartedButtonText}"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="@+id/description"
            app:layout_constraintTop_toBottomOf="@+id/description"
            tools:text="Get started" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>